    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            width: 100%;
            background-color: #e9e9e9;
        }

        .container {
            display: flex;
            justify-content: space-around;
            margin-top: 50px;
            flex-wrap: wrap; /* Kartların alt alta sıralanmasını sağlar */
            overflow-y: scroll;
            height: 100vh;
        }
        /*card animasyon*/
        .card {
            height: 300px;
            width: 300px;
            border-radius: 20px;
            margin: 10px; /* Kartlar arasında boşluk bırakır */
        }

        .card-inner {
            position: relative;
            width: 100%;
            height: 0;
            padding-bottom: 100%;
            transition: transform 0.8s;
            transform-style: preserve-3d;
        }

        .card:hover .card-inner {
            transform: rotateY(180deg);
        }

        .card-front, .card-back {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 20px;
        }

        .card-front {
            background-color: white;
        }

        .card-back {
            background-color: #022032;
            color: white;
            transform: rotateY(180deg);
        }

        header {
            background-color: #022032;
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        ::-webkit-scrollbar {
            display: none;
        }

        footer {
            background-color: #022032;
            color: #fff;
            text-align: center;
            padding: 10px;
            position: relative;
            bottom: 0;
            width: 100%;
        }
    </style>

</head>

